<h1 class="mt-4 text-center">Cateogries</h1>
<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
<div id="page-content">
    <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
            <div class="col-4">
                <div class="container mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "card-title text-success" %></h5>
                            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Created <%= time_ago_in_words(category.created_at) %> 
                                ,edited <%= time_ago_in_words(category.updated_at) %> 
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>